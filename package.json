{
  "name": "koa-knex-realworld-example",
  "version": "1.0.0",
  "description": "conduit on koa with knex",
  "main": "src/bin/server",
  "repository": "git@github.com:gothinkster/koa-knex-realworld-example.git",
  "author": "Dmitrii Solovev <dimonnwc3@gmail.com>",
  "license": "ISC",
  "scripts": {
    "start": "cross-env NODE_PATH=src node src/bin/server",
    "db:load": "knex seed:run --knexfile src/config/knexfile.js",
    "lint": "eslint \"**/*.js\"",
    "format": "prettier --write \"**/*.js\"",
    "test": "jest --coverage --verbose",
    "test:watch": "jest --watch"
  },
  "prettier": {
    "semi": false,
    "trailingComma": "all"
  },
  "jest": {
    "bail": true,
    "testEnvironment": "node",
    "coverageReporters": [
      "text"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint",
      "jest --findRelatedTests",
      "git add"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "standard",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    }
  },
  "eslintIgnore": [
    "node_modules"
  ],
  "dependencies": {
    "bcrypt": "^3.0.0",
    "cross-env": "^5.2.0",
    "date-fns": "^1.28.3",
    "dotenv": "^6.0.0",
    "http-shutdown": "^1.2.0",
    "humps": "^2.0.0",
    "join-js": "^1.0.0",
    "jsonwebtoken": "^8.3.0",
    "kcors": "2.2.2",
    "knex": "^0.13.0",
    "koa": "^2.5.2",
    "koa-bodyparser": "^4.2.1",
    "koa-helmet": "^4.0.0",
    "koa-jwt": "^3.5.0",
    "koa-logger": "^3.2.0",
    "koa-response-time": "^2.0.0",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.10",
    "pg": "^7.7.1",
    "qs": "^6.5.2",
    "request": "^2.88.0",
    "request-promise": "^4.2.0",
    "slug": "^0.9.1",
    "sqlite3": "^4.0.4",
    "uuid": "^3.3.2",
    "validator": "^10.7.0",
    "yup": "^0.26.3"
  },
  "devDependencies": {
    "eslint": "^5.12.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "faker": "^4.1.0",
    "husky": "^1.3.1",
    "jest": "^23.5.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3"
  }
}
